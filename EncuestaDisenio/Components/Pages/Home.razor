@page "/"

<style>
    .landing-container {
        background: url("https://wallpapers.com/images/hd/abstract-purple-blue-gradient-rd3r9vw8dzqkjk1p.jpg") no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        text-align: center;
        color: white;
    }

    .header {
        margin-top: 100px;
    }

    .header h1 {
        font-size: 3.5rem;
        font-weight: bold;
        color: #ff69b4; /* Rosa fuerte */
        text-shadow: 2px 2px 6px rgba(0,0,0,0.5);
    }

    .buttons {
        margin-top: 40px;
    }

    .buttons button {
        background-color: #28a745;
        border: none;
        border-radius: 8px;
        padding: 14px 28px;
        margin: 0 10px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
        color: white;
    }

    .buttons button:hover {
        background-color: #218838;
        transform: scale(1.05);
    }

    .footer {
        background: rgba(138,43,226,0.9);
        width: 100%;
        padding: 15px;
        text-align: center;
        font-size: 0.9rem;
        color: white;
        margin-top: 50px;
    }
</style>

<div class="landing-container">
    <div class="header">
        <h1>Bienvenido a la Aplicación de Encuestas</h1>
    </div>

    <div class="buttons">
        <button @onclick="GoLogin">Iniciar Sesión</button>
        <button @onclick="GoRegister">Registrarse</button>

    </div>

    <div class="footer">
        © 2024 Aplicación de Encuestas - Todos los derechos reservados
    </div>
</div>

@code {
    [Inject] NavigationManager Navigation { get; set; } = default!;

    void GoLogin() => Navigation.NavigateTo("/login");
    void GoRegister() => Navigation.NavigateTo("/registrar");
}